                    $('#Alerta').removeAttr('hidden'); $('#Mywrapper').animate({ scrollTop: 0 }, 1000);

                }
            });
        } else if (ModalAberta == 'dep') {
            $('#SelectDepartamentos').load('/CadastroFuncionarios/Select/?Select=3', function (r, s, x) {
                if (s == 'error') {
                    $('#txtalerta').text('Erro: ' + x.statusText + ' : ' + x.status);
                    $('#Alerta').removeAttr('hidden'); $('#Mywrapper').animate({ scrollTop: 0 }, 1000);

