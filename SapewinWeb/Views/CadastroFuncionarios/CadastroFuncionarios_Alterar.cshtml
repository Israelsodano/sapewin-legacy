                    $('#txtalerta').text('Erro: ' + x.statusText + ' : ' + x.status);
                    $('#Alerta').removeAttr('hidden'); $('#Mywrapper').animate({ scrollTop: 0 }, 1000);

                }
            });
        } else if (ModalAberta == 'car') {
            $('#SelectParametros').load('/CadastroFuncionarios/Select/?Select=4', function (r, s, x) {
