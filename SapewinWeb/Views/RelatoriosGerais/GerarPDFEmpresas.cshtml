@model IEnumerable<SapewinWeb.Models.Empresas>
<!DOCTYPE html>

<html>
<head>
    <style>
        body
        {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
            font-size: 1rem;
            line-height: 1.5;
            color: #212529;
            text-align: left;
            background-color: #fff;
        }

        table
        {
            width: 100%;
        }
        .Direita
        {
            text-align: right;
        }
        .Centro
        {
            text-align: center;
        }
        .Esquerda
        {
            text-align: left;
        }
        .Bordas
        {
            border-bottom: 1px solid #808080;
        }
        .Titulo
        {
            font-weight: bolder;
        }
    </style>
</head>
<body>
    <table>
        <tr><th class="Bordas">RELATÓRIOS DE EMPRESAS</th></tr>
    </table>
        <br />
        <br />
        @foreach (var Empresa in Model)
        {
            <table>
                <tr><td class="Bordas"><span class="Titulo">Código: </span>@Empresa.IDEmpresa</td></tr>
                <tr><td class="Bordas"><span class="Titulo">Razão: </span>@Empresa.Nome</td></tr>
                <tr><td class="Bordas"><span class="Titulo">Endereço: </span>@Empresa.Endereco</td></tr>
                <tr><td class="Bordas"><span class="Titulo">Cidade: </span>@Empresa.Cidade</td></tr>
                <tr><td class="Bordas"><span class="Titulo">UF: </span>@Empresa.UF</td></tr>
                <tr><td class="Bordas"><span class="Titulo">Cep: </span>@Empresa.Cep</td></tr>
                <tr><td class="Bordas"><span class="Titulo">Documento: </span>@(SapewinWeb.Metodos.ValidaDocumentos.CnpjeValido(Empresa.Documento) ? SapewinWeb.Metodos.ValidaDocumentos.ToCnpj(Empresa.Documento) : SapewinWeb.Metodos.ValidaDocumentos.ToCpf(Empresa.Documento))</td></tr>
                <tr><td class="Bordas"><span class="Titulo">IE: </span>@Empresa.IE</td></tr>
            </table>
            <br />
        }

</body>
</html>
